{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "package.json",
    "pnpm-workspace.yaml",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "!dist/**",
        "!dist",
        "!**/dist",
        "!**/dist/**",
        "!**/build/**",
        "!**/lib/**",
        "!**/.next/**",
        "!**/*.js",
        "!**/*.d.ts",
        "!**/*.js.map",
        "!**/.turbo/**",
        "!**/node_modules/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interruptible": true,
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "!dist/**",
        "!dist",
        "!**/dist",
        "!**/dist/**",
        "!**/build/**",
        "!**/lib/**",
        "!**/.next/**",
        "!**/*.js",
        "!**/*.d.ts",
        "!**/*.js.map",
        "!**/.turbo/**",
        "!**/node_modules/**"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "check": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:generate": {
      "dependsOn": ["^build"],
      "outputs": ["drizzle/**"]
    },
    "prepare": {
      "dependsOn": ["^build"],
      "outputs": ["styled-system/**"]
    }
  }
}
