  "devDependencies": {
    "@types/dockerode": "^3.3.38",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.30",
    "@types/pg": "^8.11.13",
    "@types/unzipper": "^0.10.11",
    "esbuild": "^0.20.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "ws": "^8.18.2"
