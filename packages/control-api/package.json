    "@octokit/rest": "^21.1.1",
    "@octokit/types": "^14.0.0",
    "@octokit/webhooks-methods": "^5.1.1",
    "@octokit/webhooks-types": "^7.6.1",
    "@opentelemetry/auto-instrumentations-node": "^0.60.0",
