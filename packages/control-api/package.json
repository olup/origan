    "dockerode": "^4.0.6",
    "dotenv": "^16.5.0",
    "drizzle-kit": "0.31.1",
    "drizzle-orm": "0.43.1",
    "hono": "4.7.7",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.11",
    "pg": "^8.14.1",
    "unzipper": "^0.12.3",
