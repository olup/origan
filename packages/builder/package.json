    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.0",
    "@types/node": "^22.15.18",
    "@types/unzipper": "^0.10.11",
    "@types/yargs": "^17.0.33",
    "@vitest/ui": "^2.0.0",
    "tsx": "^4.19.4",
