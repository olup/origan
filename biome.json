{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "tsconfig.app.json",
      "tsconfig.node.json",
      "dist/**",
      "node_modules/*",
      ".pnpm-store/**",
      "*.config.*",
      "*.json",
      "tsconfig.json",
      "example"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": ["node_modules/*", ".pnpm-store/**", "dist/**"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
