{
  "name": "origan-monorepo",
  "private": true,
  "packageManager": "pnpm@10.7.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently \"pnpm run -w --filter @origan/control-api dev\" \"pnpm run -w --filter @origan/control-frontend dev\"",
    "test": "pnpm -r test",
    "lint": "biome check .",
    "format": "biome format . --write",
    "check": "biome check --apply ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.0.0",
    "concurrently": "^9.1.2",
    "typescript": "^5.0.0"
  }
}
