{
  "name": "origan-monorepo",
  "private": true,
  "packageManager": "pnpm@10.8.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "turbo format",
    "check": "turbo check",
    "clean": "turbo clean",
    "build:cli": "turbo build --filter=@origan/cli"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@types/node": "^20.17.30",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "@origan/cli": "link:packages/cli"
    }
  }
}
