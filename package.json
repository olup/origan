{
  "name": "origan-monorepo",
  "private": true,
  "packageManager": "pnpm@10.8.1",
  "workspaces": [
    "packages/*",
    "infra"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=@origan/control-api --filter=@origan/gateway --filter=@origan/admin",
    "dev:all": "turbo dev",
    "dev:api": "turbo dev --filter=@origan/control-api",
    "dev:gateway": "turbo dev --filter=@origan/gateway",
    "dev:admin": "turbo dev --filter=@origan/admin",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "turbo format",
    "check": "turbo check",
    "clean": "turbo clean",
    "build:cli": "turbo build --filter=@origan/cli",
    "deploy:infra": "pnpm --filter infra run deploy:alchemy"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@types/node": "^20.17.30",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  }
}
